{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "CommonJS",
    "moduleResolution": "Node",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "outDir": ".",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ES2021",
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/tests/**/*"
  ],
}
