{
  "compilerOptions": {
    "rootDir": "src",
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": false,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "outDir": ".",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "ESNext"
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "**/*.test.ts",
    "**/*.test.tsx",
    "src/test/**/*",
  ]
}
