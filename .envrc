export HELENE_HOME=$(git rev-parse --show-toplevel)
export HELENE_PACKAGES_HOME=$HELENE_HOME/packages
export HELENE_META_HOME=$HELENE_HOME/meta

function @package {
  local PACKAGE=$1
  shift
  (cd "$HELENE_PACKAGES_HOME/$PACKAGE"; bun $@)
}

function @meta {
  local PACKAGE=$1
  shift
  (cd "$HELENE_META_HOME/$PACKAGE"; bun $@)
}