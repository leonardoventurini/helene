{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "allowUnreachableCode": true,
    "declaration": true,
    "esModuleInterop": true,
    "incremental": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": false,
    "noUnusedLocals": false,
    "outDir": "dist",
    "skipLibCheck": true,
    "sourceMap": true,
    "target": "es2021"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "./src/tests/**/*"
  ]
}
