{
  "name": "helene",
  "version": "1.2.28",
  "description": "Real-time Web Apps for Node.js and Bun",
  "browser": "index.browser.js",
  "main": "index.js",
  "type": "commonjs",
  "scripts": {
    "lint": "eslint --ext .js,.jsx,.ts,.tsx packages/**/src/**/*",
    "build": "tsc",
    "watch": "tsc --watch",
    "clean": "rm -rf client react server data utils index.* tsconfig.tsbuildinfo",
    "rebuild": "yarn run clean && yarn run build",
    "bun:test": "nodemon --watch 'src/**/*' -e ts,tsx --exec 'bun run bun:test:mocha'",
    "bun:test:mocha": "bun run ./node_modules/mocha/bin/mocha.js 'src/**/*.test.*' --extensions ts,tsx --file 'src/tests/utils/setup-tests.ts' --exit",
    "node:test": "nodemon --watch 'src/**/*' -e ts,tsx --exec 'bun run node:test:mocha'",
    "node:test:mocha": "node --require @swc/register ./node_modules/mocha/bin/mocha.js 'src/**/*.test.*' --extensions ts,tsx --file 'src/tests/utils/setup-tests.ts' --exit"
  },
  "dependencies": {},
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^6.6.0",
    "@typescript-eslint/parser": "^6.6.0",
    "bun-types": "^1.0.1",
    "eslint": "^8.49.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-import": "^2.28.1",
    "eslint-plugin-prettier": "^5.0.0",
    "eslint-plugin-react": "^7.33.2",
    "eslint-plugin-react-hooks": "^4.6.0",
    "prettier": "^3.0.3",
    "typescript": "^5.1.3"
  },
  "author": "Leonardo Venturini",
  "license": "MIT",
  "repository": "https://github.com/leonardoventurini/helene",
  "keywords": [
    "websockets",
    "rpc",
    "react",
    "reactjs",
    "methods",
    "events",
    "node",
    "nodejs",
    "bun"
  ],
  "bugs": {
    "url": "https://github.com/leonardoventurini/helene/issues"
  },
  "volta": {
    "node": "20.6.1",
    "yarn": "1.22.19"
  },
  "workspaces": [
    "packages/*"
  ],
  "private": true
}
